nav#top_nav {
  height: 45px;
  background: url(<%= image_path "top_nav_background.png" %>);
  width: 100%;
  z-index: 100;
  vertical-align: top;
  border-bottom: 1px solid #666;

  img {
    height: 64px;
    margin-right: 20px;
    border-left: 1px solid #666;
    border-bottom: 1px solid #666;
    border-right: 1px solid #666;
  }

  ul {
    padding: 0px;
    margin: 0px;
    vertical-align: top;
  }

  ul, li {
    display: inline-block;

  }

  li {
    color: white;
  }

  li a {
    display: inline-block;
    height: 35px;
    padding-top: 10px;
    color: white;
  }

  li + li {
    margin-left: 20px;
  }

  #how_to_help_btn {
    background: white;
    color: #ff7733;
    margin-top: 7px;
    float: right;
    padding: 3px 20px;
    height: 25px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
  }
}