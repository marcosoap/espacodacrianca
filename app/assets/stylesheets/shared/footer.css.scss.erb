footer {
  margin-top: 50px;
  padding-top: 50px;
  padding-bottom: 90px;
  background: url(<%= image_path "footer_background.jpg" %>);
  border-top: 2px solid #aaa;
  background-size: cover;

  ul, li {
    list-style: none;
    color: #666;
  }

  li + li {
    margin-top: 7px;
  }

  li img {
    width: 24px;
    margin-right: 7px;
  }
}