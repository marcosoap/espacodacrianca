div#index header#banner {
  height: 478px;

  .slide {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
    display: none;
    height: 478px;
    position: absolute;
    width: 100%;
  }

  .slide1 {
    display: block;
    background-image: url(<%= image_path "index/slide1.jpg" %>);
  }

  .slide2 {
    background-image: url(<%= image_path "index/slide2.jpg" %>);

    background-position: 100% 50%;
  }

  .slide3 {
    background-image: url(<%= image_path "index/slide3.jpg" %>);
  }


  .slide4 {
    background-image: url(<%= image_path "index/slide4.jpg" %>);
  }

  div.text {
    margin-top: 120px;
    padding: 20px;
    background: rgba(255,255,255,.90);
    
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
  }

  nav {
    position: absolute;
    z-index: 100;
    margin-top: 438px;
    width: 100%;
    text-align: right;
  }

  nav ul li,
  nav ul li a {
    display: inline-block;
  }

  nav ul li a {
    background: #4567a2;
    color: white;
    padding: 7px 16px;
    -webkit-border-top-left-radius: 3px;
    -webkit-border-top-right-radius: 3px;
    -moz-border-radius-topleft: 3px;
    -moz-border-radius-topright: 3px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
  
    &:hover {
      text-decoration: none;
      background: #e78b24;
    }

    &.selected {
      background: #e78b24;
    }
  }
}